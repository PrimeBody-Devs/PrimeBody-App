# Production Environment Configuration for PrimeBody
# Copy this file to .env.local and fill in the actual values

# App Configuration
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_BASE_URL=https://primebody.app
SUPPORT_EMAIL=support@primebody.app

# Web3 Configuration
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_EXPLORER_URL=https://basescan.org

# Analytics Configuration (Enable in production)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# API Configuration
API_BASE_URL=https://api.primebody.app
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Feature Flags (Production settings)
NEXT_PUBLIC_ENABLE_WEB3=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_DEMO_VIDEO=true
NEXT_PUBLIC_ENABLE_URGENCY=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Security
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://primebody.app

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ERROR_REPORTING=true

# Content Management
CONTENT_SOURCE=static
CONTENT_CACHE_DURATION=300000

# Deployment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.primebody.app

# Database (if applicable)
DATABASE_URL=

# Redis (if applicable)
REDIS_URL=

# Email Service (if applicable)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Social Media
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/primebody
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/primebody
NEXT_PUBLIC_FARCASTER_URL=https://warpcast.com/primebody